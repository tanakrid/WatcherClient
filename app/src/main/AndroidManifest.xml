<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.watcherclient">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".DeleteDevicePopupActivity"></activity>
        <activity android:name=".ManageDeviceInRoomActivity" />
        <activity android:name=".DeleteMemberPopupActivity" />
        <activity android:name=".ManageMemberInRoomActivity" />
        <activity android:name=".DeleteRoomPopupActivity" />
        <activity android:name=".CreateRoomPopupActivity" />
        <activity android:name=".ShowDetailRoomActivity" />
        <activity android:name=".ManageRoomActivity" />
        <activity android:name=".ShowUserProfileActivity" />
        <activity android:name=".RegisterDeviceActivity" />
        <activity android:name=".NotificationActivity" />
        <activity android:name=".CreateRoomActivity" />
        <activity android:name=".ShowRoomsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>